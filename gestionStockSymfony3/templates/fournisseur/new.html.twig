{% extends 'base.html.twig' %}

{% block title %}
	Ajouter un fournisseur
{% endblock %}

{% block body %}


	{{ form_start(form) }}
	<div class="content-body" style="/* min-height: 884px; */">

		<h1>AJouter un fournisseur
		</h1>
		<!-- row -->

		<div class="container-fluid">
			<div class="container-fluid">
				<div class="row justify-content-center">
					<div class="col-lg-12">
						<div class="card">
							<div class="card-body">
								<div class="form-validation">
									<form class="form-valide" action="#" method="post">
										<div class="form-group row">
											<label class="col-lg-4 col-form-label" for="val-username">Username
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-6">
												{{ form_widget(form.name) }}
											</div>
										</div>
										<div class="form-group row">
											<label class="col-lg-4 col-form-label" for="val-email">Address
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-6">
												{{ form_widget(form.address) }}
											</div>
										</div>
										<div class="form-group row">
											<label class="col-lg-4 col-form-label" for="val-password">email
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-6">
												{{ form_widget(form.email) }}
											</div>
										</div>
										<div class="form-group row">
											<label class="col-lg-4 col-form-label" for="val-confirm-password">Phone
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-6">
												{{ form_widget(form.phone) }}
											</div>
										</div>

									</form>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<button class="btn btn-primary">
			Ajouter
		</button>
		{{ form_end(form) }}
	{% endblock %}
