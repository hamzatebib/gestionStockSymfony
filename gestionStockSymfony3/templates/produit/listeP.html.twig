{% extends 'base.html.twig '%}
{% block title %}
	Liste produit
{% endblock %}

{% block body %}
	<div
		class="content-body" style="/* min-height: 884px; */">


		<!-- row -->

		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div class="card-body">
							<div class="card-title">
								<h4>Liste produit</h4>
							</div>
							<div class="table-responsive">
								<table class="table">
									<thead>
										<tr>
											<th>#</th>
											<th>Label</th>
											<th>Price</th>
											<th>photoface</th>
											<th>photoprofil</th>
											<th>quantity</th>
											<th>Fournisseur</th>
										</tr>
									</thead>
									<tbody>

										{% for item in produits %}
											<tr>
												<th>{{ item.id }}</th>
												<th>{{ item.label }}</th>
												<td>{{ item.price }}</td>
												<td>
													<span class="badge badge-primary px-2">{{ item.photoface }}</span>
												</td>
												<td>
													<span class="badge badge-primary px-2">{{ item.photoprofil }}</span>
												</td>
												<td>{{ item.quantity }}</td>
												<td class="color-primary">{{ item.fournisseur }}</td>
												<td>
													<a href="{{ path('modify_produit',{id:item.id}) }}">
														<span class="fa fa-edit"></span>
													</a>
												</td>
												<td>
													<a href="{{ path('produit_delete',{id:item.id}) }}">
														<span class="fa fa-trash"></span>
													</a>
												</td>
											</tr>
										{% endfor %}
									</tbody>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>


		</div>
	</div>
	<!-- #/ container -->
</div>


<!-- /***/-->{% endblock %}
