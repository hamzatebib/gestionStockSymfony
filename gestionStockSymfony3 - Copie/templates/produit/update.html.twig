{% extends 'base.html.twig' %}

{% block title %}
	modiier un produit
{% endblock %}

{% block body %}


	{{ form_start(form) }}

	<div class="content-body" style="/* min-height: 884px; */">

		<h1>Modifier un produit
		</h1>
		<!-- row -->

		<div class="container-fluid">
			<div class="container-fluid">
				<div class="row justify-content-center">
					<div class="col-lg-12">
						<div class="card">
							<div class="card-body">
								<div class="form-validation">
									<form class="form-valide" action="#" method="post">
										<div class="form-group row">
											<label class="col-lg-4 col-form-label" for="val-username">Label
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-6">
												{{ form_widget(form.label) }}
											</div>
										</div>
										<div class="form-group row">
											<label class="col-lg-4 col-form-label" for="val-email">Prix
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-6">
												{{ form_widget(form.price) }}
											</div>
										</div>
										<div class="form-group row">
											<label class="col-lg-4 col-form-label" for="val-password">Photoface
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-6">
												{{ form_widget(form.photoface) }}
											</div>
										</div>
										<div class="form-group row">
											<label class="col-lg-4 col-form-label" for="val-confirm-password">Photoprofil
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-6">
												{{ form_widget(form.photoprofil) }}
											</div>
										</div>
										<div class="form-group row">
											<label class="col-lg-4 col-form-label" for="val-confirm-password">Quantity
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-6">
												{{ form_widget(form.quantity) }}
											</div>
										</div>
										<div class="form-group row">
											<label class="col-lg-4 col-form-label" for="val-confirm-password">Fournisseur
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-6">
												{{ form_widget(form.fournisseur) }}
											</div>
										</div>

									</form>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>


		<button class="btn btn-primary">
			Modifier
		</button>
		{{ form_end(form) }}
	{% endblock %}
