{% extends 'base.html.twig '%}
{% block title %}
	Liste fournisseur
{% endblock %}

{% block body %}
	<div
		class="content-body" style="/* min-height: 884px; */">


		<!-- row -->

		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div class="card-body">
							<div class="card-title">
								<h4>Liste fournisseur</h4>
							</div>
							<div class="table-responsive">
								<table class="table">
									<thead>
										<tr>
											<th>#</th>
											<th>Name</th>
											<th>Address</th>
											<th>Email</th>
											<th>Phone</th>
										</tr>
									</thead>
									<tbody>

										{% for item in fournisseurs %}
											<tr>
												<th>{{ item.id }}</th>
												<td>{{ item.name }}</td>
												<td>
													<span class="badge badge-primary px-2">{{ item.address }}</span>
												</td>
												<td>{{ item.email }}</td>
												<td class="color-primary">{{ item.phone }}</td>
												<td>
													<a href="{{ path('modify_fournisseur',{id:item.id}) }}">
														<span class="fa fa-edit"></span>
													</a>
												</td>
												<td>
													<a href="{{ path('fournisseur_delete',{id:item.id}) }}">
														<span class="fa fa-trash"></span>
													</a>
												</td>
											</tr>
										{% endfor %}
									</tbody>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>


		</div>
	</div>
	<!-- #/ container -->
</div>


<!-- /***/-->{% endblock %}
